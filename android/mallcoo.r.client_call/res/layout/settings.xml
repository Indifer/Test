<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:weightSum="1">
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="vertical"
                android:scrollY="0dp"
                android:scrollX="0dp"
            >
        <LinearLayout android:layout_width="700dp"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center">
            <LinearLayout android:layout_width="1dp"
                          android:layout_height="50dp"
                          android:layout_gravity="center"></LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="是否以服务端启动："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <CheckBox
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/ckbIsServer" android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/layoutEdit" android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="打印机类型："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/spnPrintType" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_height="80dp"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="打印机配置："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>

                    <TextView
                            android:id="@+id/txtPdName"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="未设置"
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <Button
                            android:id="@+id/btnPdSet"
                            android:text="设置"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="打印机状态："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <TextView
                            android:id="@+id/spnPdStatus"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="未连接"
                            android:gravity="left"
                            android:textSize="28sp"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="是否切纸："
                            android:textSize="28sp"/>

                    <Spinner
                            android:id="@+id/spnIsCut"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="走纸行数："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <EditText
                            android:id="@+id/txtPaperRow"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:gravity="left"
                            android:textSize="28sp"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="打印机尺寸："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/spnPrintWidth" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="语速："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:background="@drawable/gray_border"
                            android:id="@+id/lblVolume"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="0.1"
                                  android:layout_height="wrap_content"></LinearLayout>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sbVolume" android:layout_weight="0.7"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="叫号重复数："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:background="@drawable/gray_border"
                            android:id="@+id/lblSpeechReCount"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="0.1"
                                  android:layout_height="wrap_content"></LinearLayout>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sbSpeechReCount" android:layout_weight="0.7"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="语音种类："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/spnSpeechType" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:text="号码分词："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/spnSpNoType" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/config_hidden"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:text="是否读桌型字母："
                            android:paddingRight="10dp"
                            android:textSize="28sp"/>
                    <CheckBox
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/chkIsSpeechAlphabet" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingTop="40dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                    <Button android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="确定"
                            android:textSize="28sp"
                            android:gravity="right"
                            android:id="@+id/btnSave"/>
                    <Button android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="取消"
                            android:textSize="28sp"
                            android:gravity="right"
                            android:id="@+id/btnCancel"/>

                </LinearLayout>

                <LinearLayout android:layout_width="1dp"
                              android:layout_height="50dp"
                              android:layout_gravity="center"></LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
