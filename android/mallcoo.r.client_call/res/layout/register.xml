<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="1280dp"
              android:layout_height="800dp"
              android:background="@drawable/background"
              android:gravity="center_horizontal"
              android:orientation="vertical">

  <ImageButton
          android:id="@+id/shutDown"
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:layout_marginLeft="580dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/btn_shutdown_state"
            />
  <ImageView
          android:background="@drawable/title"
          android:layout_width="344dp"
          android:layout_height="41dp"
          android:layout_marginTop="50dp"
            />t

  <LinearLayout
          android:layout_width="420dp"
          android:layout_height="450dp"
          android:layout_marginTop="50dp"
          android:background="@color/white_corners_bg"
          android:gravity="center_horizontal"
          android:orientation="vertical">


    <EditText
            android:id="@+id/shopNO"
            android:layout_width="336dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/textbox_corners_bg"
            android:gravity="center_vertical"
            android:hint="商户编号"
            android:inputType="none"
            android:paddingLeft="15px"
            android:textColor="#FF999999"
            android:textColorHint="#CCCCCC"
            android:textSize="28sp"/>

    <EditText
            android:id="@+id/shopPwd"
            android:layout_width="336dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_corners_bg"
            android:gravity="center_vertical"
            android:hint="管理密码"
            android:inputType="none"
            android:paddingLeft="15px"
            android:textColor="#FF999999"
            android:textColorHint="#CCCCCC"
            android:textSize="28sp"/>
    <LinearLayout android:layout_width="336dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginTop="30dp">
      <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                     android:id="@+id/ckbIsServer"/>
      <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否以服务端启动"
                android:textSize="28sp"/>
    </LinearLayout>
    <Button
            android:id="@+id/btnRegister"
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:background="@color/red_corners_bg"
            android:layout_marginTop="30dp"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="50sp"/>
  </LinearLayout>

</LinearLayout>