<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1219dp"
    android:layout_height="660dp"
    android:background="@color/white_corners_bg"
    android:orientation="horizontal" >

  <LinearLayout
      android:layout_width="400dp"
      android:layout_height="660dp"
      android:background="@color/white_corners_bg"
      android:orientation="horizontal" >

    <include layout="@layout/numpanel2" />
  </LinearLayout>

  <FrameLayout
      android:layout_width="769dp"
      android:layout_height="424dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="52dp"
      android:background="@drawable/gray_border" >

    <ImageView
        android:id="@+id/imgQr"
        android:layout_width="222dp"
        android:layout_height="222dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="353dp"
        android:layout_marginTop="34dp"
        android:text="使用猫酷APP扫描此二维码打印菜单。"
        android:textColor="#000000"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/printMess1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/printMess2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="48sp" />
  </FrameLayout>

</LinearLayout>