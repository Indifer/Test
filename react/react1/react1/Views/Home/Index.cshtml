
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/assets/doT.js"></script>
    <script src="~/assets/mustache.min.js"></script>
    <script src="https://res.mallcoo.net/libs/zepto/1.1.6/zepto.min.js"></script>
</head>
<body>
    <div id="div">
    </div>
    <script type="text/template" id="temp">
        <h1>Here is a sample template {{=it.foo}}</h1>
    </script>

    <script type="text/template" id="temp2">
        {{ for(var prop in it) { }}
        <div>
            <span>{{=prop}},{{=it[prop]}}</span>
            <span>{{=(1+2)}}</span>
        </div>
        {{ } }}

    </script>
    <script>
        var tempFn = doT.template($("#temp").html());
        var data = { foo: "xxxx" };
        var html = tempFn(data);
        $("#div").append(html);

        var tempFn = doT.template($("#temp2").html());
        var data = { "name": "Jake", "age": 31, "mother": "Kate", "father": "John", "interests": ["basketball", "hockey", "photography"], "contact": { "email": "jake@xyz.com", "phone": "999999999" } };
        var html = tempFn(data);
        $("#div").append(html);

    </script>
</body>


</html>
