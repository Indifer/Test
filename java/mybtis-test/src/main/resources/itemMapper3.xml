<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="item.ItemMapper">
    <select id="getList" resultType="entity.Item">
        select * from tuan.item
    </select>

    <select id="getById" resultType="entity.Item">
        select * from tuan.item where tuan.item.id = #{id}
    </select>

    <insert id="add" parameterType="entity.Item">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into item(`name`) value(#{name})
    </insert>

    <update id="updateTime" parameterType="java.lang.Integer">
        update tuan.item set name=#{name} where id=#{id}
    </update>
</mapper>